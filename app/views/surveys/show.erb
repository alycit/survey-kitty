<h2><%= @survey.name %></h2>
<form action="/surveys/<%= @survey.id %>/choices" method="POST" id="survey">
  <ol>
  <% @survey.questions.each do |question| %>
      <li>
        <p><%= question.text %></p>
        <% question.answers.each do |answer| %>
        <div>
          <input type="radio" name="choices[<%= question.id %>]" value="<%= answer.id %>"> <%= answer.text %>
        </div>
        <% end %>
      </li>
  <% end %>
  </ol>
  <input type="submit" />
</form>
<div id="charts"></div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
<script src="/js/takeSurvey.js"></script>
